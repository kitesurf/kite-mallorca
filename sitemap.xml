---
lang: en
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
  {% if post.lang == page.lang and post.layout != nil %}
  <url>
    <loc>http://kite-mallorca.com{{site.baseurl}}{{post.url}}</loc>
  </url>
  {% endif %}
  {% endfor %}

  {% for page in site.pages %}
  {% if page.lang == 'en' and page.layout != nil %}
  <url>
    <loc>http://kite-mallorca.com{{site.baseurl}}{{page.url}}</loc>
  </url>
  {% elsif page.lang == 'es' and page.layout != nil %}
  <url>
    <loc>http://kite-mallorca.com{{site.baseurl}}{{page.url}}</loc>
  </url>
  {% elsif page.lang == 'de' and page.layout != nil %}
  <url>
    <loc>http://kite-mallorca.com{{site.baseurl}}{{page.url}}</loc>
  </url>
  {% endif %}
  {% endfor %}
</urlset>